doctype html
html(lang="en" dir="ltr")
  block head
    include partials/head.jade

  body
    block header
      nav.wrg-menu.navbar.navbar-inverse.navbar-fixed-top
        div.container
          div.navbar-header
            button.navbar-toggle.collapsed(data-toggle="collapse", data-target="#navbar", aria-expanded="false", aria-controls="navbar")
              span.sr-only Toggle navigation
              span.icon-bar
              span.icon-bar
              span.icon-bar
            div.active-menu-mobile World Of Tanks

          div#navbar.my-navbar(aria-expanded="false")
            ul.nav.navbar-nav
              li.active
                a(href="#") World Of Tanks
